.space-line {
  width: 690rpx;
  height: 1rpx;
  background: #e5e5e5;
}

.scroller {
  margin-top: 140rpx;
  height: calc(100vh - 140rpx - 120rpx);
}

.product {
  width: 750rpx;
  margin-bottom: 30rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: inset 0 1rpx 0 0 #e5e5e5, inset 0 -1rpx 0 0 #e5e5e5;
}

.product-swiper {
  height: 420rpx;
  width: 750rpx;
}

.product-cover {
  width: 750rpx;
  height: 420rpx;
}

.product-title {
  width: 690rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.product-title-name {
  font-size: 32rpx;
  flex: 0.95;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-title-price {
  color: #eb0028;
  font-size: 36rpx;
}

.product-content {
  width: 690rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.product-content-introduce {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.65);
  margin-bottom: 30rpx;
}

.product-content-like {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.25);
}

.icon {
  width: 28rpx;
  height: 28rpx;
}

.text--highlight {
  color: rgba(0, 0, 0, 0.45);
}

.detail {
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  flex-direction: column;
  box-shadow: inset 0 1rpx 0 0 #e5e5e5, inset 0 -1rpx 0 0 #e5e5e5;
}

.detail image {
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  width: 690rpx;
}
